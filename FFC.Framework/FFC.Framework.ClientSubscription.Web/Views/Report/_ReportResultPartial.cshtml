@model IEnumerable<FFC.Framework.Data.ReportSchedule>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Report.ReportName)
        </th>
        <th>
            @Html.DisplayName("Delivery Type")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchedulePeriod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Report.ReportName)
        </td>
        <td>
           @* @Html.DisplayFor(modelItem => item.DeliveryTypeId)*@
            @Enum.GetName(typeof(FFC.Framework.Common.DeliveryTypes), item.DeliveryTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchedulePeriod)
        </td>
        <td>
              @Enum.GetName(typeof(DayOfWeek), item.ScheduleDay)
           @* @Html.DisplayFor(modelItem => item.ScheduleDay)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReportScheduleId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReportScheduleId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReportScheduleId })
        </td>
    </tr>
}

</table>
